<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nature2"
    tools:context=".MainActivity">





  <EditText
      android:id="@+id/edit"
      android:layout_width="200sp"
      android:layout_height="50sp"
      android:layout_centerHorizontal="true"
      android:hint=" Enter City Name"
      android:textColorHint="#80E0F3"
      android:textColor="#fff"
      android:inputType="text"
      android:fontFamily="@font/regular"
      android:textAlignment="center"
      android:background="@drawable/edittextstyle"


      />

  <Button
      android:id="@+id/btn"
      android:layout_width="40sp"
      android:layout_height="40sp"
      android:layout_below="@+id/edit"
      android:layout_marginTop="8sp"
      android:layout_centerHorizontal="true"
      android:background="@drawable/buttonstyle"
      android:text="O"
      android:fontFamily="@font/regular"
      android:textColor="#FFFFFF"/>


  <TextView
      android:id="@+id/displayTemp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/btn"
      android:layout_marginTop="31dp"
      android:layout_centerHorizontal="true"
      android:fontFamily="@font/regular"
      android:text="29"
      android:textAlignment="center"
      android:textColor="#E8F0F5"
      android:textSize="70sp" />

  <TextView

      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignTop="@+id/displayTemp"
      android:text="Â°C"
      android:textColor="#E8F0F5"
      android:layout_toRightOf="@+id/displayTemp"
      android:textSize="40sp" />

  <TextView
      android:id="@+id/displayStatus"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/displayTemp"
      android:layout_centerHorizontal="true"
      android:textColor="#E8F0F5"
      android:text="Cloudy"
      android:textAlignment="center"

      android:textSize="40sp"
       />



  <TextView
      android:id="@+id/displayMax"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/displayStatus"
      android:layout_marginLeft="20sp"
      android:text="32"
      android:textColor="#E8F0F5"
      android:textSize="35sp"
      />

   <TextView
      android:id="@+id/maxTemp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      android:layout_toRightOf="@+id/displayMax"
       android:layout_alignBottom="@+id/displayMax"
      android:textSize="20sp"
      android:text="max"
      android:textColor="#E8F0F5"/>



  <TextView
      android:id="@+id/displayMin"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/displayStatus"
      android:layout_toRightOf="@+id/displayStatus"
      android:layout_marginLeft="30sp"
      android:text="30"
      android:textColor="#E8F0F5"
      android:textSize="35sp"
      />


  <TextView
      android:id="@+id/minTemp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      android:layout_toRightOf="@+id/displayMin"
      android:layout_alignBottom="@+id/displayMin"
      android:textSize="20sp"
      android:text="min"
      android:textColor="#E8F0F5"/>




<TextView
      android:id="@+id/displayCountry"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/displayStatus"
      android:layout_marginTop="150sp"
      android:layout_centerHorizontal="true"

      android:layout_gravity="center"
      android:text="Bangladesh"
      android:textColor="#E8F0F5"
      android:textSize="50sp"
       />








</RelativeLayout>